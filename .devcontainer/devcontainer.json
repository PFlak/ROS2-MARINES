{
    "name": "ROS2MARINES DEV",
    "remoteUser": "dev",
    "build": {
        "dockerfile": "Dockerfile.devcontainer",
        "args": {
            "USERNAME": "dev",
            "GID": "1000",
            "UID": "1000"
        }
    },
    "customizations": {
      "vscode": {
          "extensions": [
              "ms-python.python",
              "charliermarsh.ruff",
              "ms-vscode.cpptools-extension-pack",
              "ms-iot.vscode-ros",
              "smilerobotics.urdf",
              "redhat.vscode-xml",
              "tamasfe.even-better-toml",
              "timonwong.shellcheck",
              "yzhang.markdown-all-in-one",
              "streetsidesoftware.code-spell-checker"
          ],
          "settings": {
              "files.associations": {
                  "*.rviz": "yaml",
                  "*.srdf": "xml",
                  "*.urdf": "xml",
                  "*.xacro": "xml"
              },
              "editor.formatOnSave": true,
              "python.autoComplete.extraPaths": [
                        "/opt/ros/humble/lib/python3.10/site-packages",
                        "/opt/ros/humble/local/lib/python3.10/site-packages"
              ],
              "python.analysis.extraPaths": [
                        "/opt/ros/humble/lib/python3.10/site-packages",
                        "/opt/ros/humble/local/lib/python3.10/site-packages"
              ],
              "C_Cpp.default.browse.databaseFilename": "${default}",
              "C_Cpp.default.browse.limitSymbolsToIncludedHeaders": false,
              "C_Cpp.default.includePath": [
                "/opt/ros/humble/include/**",
                "/usr/include"
              ],
              "C_Cpp.default.intelliSenseMode": "gcc-x64",
              "C_Cpp.default.compilerPath": "/usr/bin/gcc",
              "C_Cpp.default.cStandard": "gnu11",
              "C_Cpp.default.cppStandard": "c++14"
          },
      }
    },
    "workspaceFolder": "/home/dev/ros2_ws",
    "workspaceMount": "source=${localWorkspaceFolder}/controller/controller-packages,target=/home/dev/ros2_ws/src/controller,type=bind",
    "mounts": [
        "source=${localWorkspaceFolder}/jet/jet-packages,target=/home/dev/ros2_ws/src/jet,type=bind",
        "source=/dev,target=/dev,type=bind",
        "source=/tmp/.X11-unix,target=/tmp/.X11-unix,type=bind"
    ],
    "runArgs": [
        "--net=host",
        "--device-cgroup-rule", "c *:* rmw"
    ],
    "containerEnv": {
        "DISPLAY": "${localEnv:DISPLAY}"
    }
}